                Visible="@TireVisible" TextAlign="TextAlign.Right" />
            <RadzenDataGridColumn TItem="CarDisp" Property="TireRear.WheelDiameter" Title="@TitleTireWheelDiameter"
                Visible="@TireVisible" TextAlign="TextAlign.Right" />

            <!-- Transmission -->
            <RadzenDataGridColumn TItem="CarDisp" Property="Transmission.Type" Title="@TitleTransmissionType"
                Visible="@TransmissionVisible">
                <Template Context="car">
                    @(ConvertForDisplay<HogeBlazor.Shared.Models.Db.TransmissionType>(car.Transmission.TransmissionType))
                </Template>
            </RadzenDataGridColumn>
