@page "/counter"
@using System.Security.Claims

<AuthorizeView>
    <Authorized>
        このユーザー: @context.User.FindFirst(ClaimTypes.Name).Value は認証済みです
    </Authorized>
    <NotAuthorized>
        このユーザーは認証されていません
    </NotAuthorized>
</AuthorizeView>

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
